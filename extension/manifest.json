{
  "manifest_version": 3,
  "name": "OfficeMonkey",
  "version": "0.5.0",
  "description": "Enhancements for OfficeMonkey calendar and contact pages",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://safeoffice.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://safeoffice.com/ApptCal.php*"],
      "js": ["content/calendar.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://safeoffice.com/*"],
      "js": ["content/contact.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
